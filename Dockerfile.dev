FROM ubuntu:latest
EXPOSE 5000
ENV FLASH_APP="filmlog"
ENV FLASK_DEBUG=1

RUN apt-get update -y && \
    apt-get install -y python-pip python-dev build-essential mariadb-client libmysqlclient-dev

COPY requirements.txt /
RUN pip install -r requirements.txt
COPY . /srv/filmlog.org
WORKDIR /srv/filmlog.org
#COPY ./docker/config.ini.dev ./config.ini
COPY config.ini ./config.ini
CMD python wsgi.py

